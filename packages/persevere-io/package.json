  "peerDependencies": {
    "zeromq": "^4.6.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "eslint-config-prettier": "^2.9.0",
    "microbundle": "^0.4.3",
    "prettier": "^1.10.2",
    "xo": "^0.18.2",
